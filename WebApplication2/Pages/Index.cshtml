@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Gender</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
        @foreach(var u in Model.Users)
        {

         <tr>
          <th scope="row">@u.ID</th>
          <td>@u.Fname</td>
          <td>@u.Lname</td>
          <td>@u.Email</td>
          <td>@u.Gender</td>
          <td>
              
              <a asp-page="/Update" asp-route-id="@u.ID"> Update|</a>
              <a asp-page="/Delete" asp-route-id="@u.ID"> Delete</a>


          </td>
        </tr>

        }

  </tbody>
</table>

    <a class="btn btn-primary" asp-page ="/create"> Add new user </a>

</div>